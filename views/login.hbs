{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="container mt-5 text-center justify-content-center d-flex">
    <div class="card" style="width: 35rem;">
        <div class="card-header h2 text-center">Login Form</div>
        <div class="card-body mt-4">
            <form action="/auth" method="POST" novalidate>
                <div class="mb-3">
                    <label for="name-lgn" class="form-label h5">Account Name</label>
                    <input type="text" class="form-control" id="name-lgn" value="{{this.account_name}}" placeholder="Account Name" name="account_name">
                </div>
                <div class="mb-3">
                    <label for="password-lgn" class="form-label h5 mt-2">Password</label>
                    <input type="password" class="form-control" id="password-lgn" value="{{this.password}}" placeholder="Password" name="password">
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary center-block mt-4">Submit</button>
                </div>
                
            </form>
        </div>
    </div>
</div>
<div class="mt-5 text-center h4">
    <a href="/register" class="link-primary">Register Here</a>
</div>

